<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cabme.cabmedashboard.Splash"
    tools:showIn="@layout/book_cab_container">


    <LinearLayout
        android:layout_width="290dp"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content"
        android:background="#75000000"
        android:orientation="vertical"
        android:focusable="true"
        android:id="@+id/book_a_cab_layout"
        android:focusableInTouchMode="true"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:drawablePadding="15dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:paddingRight="13dp"
            android:paddingEnd="13dp"
            android:paddingLeft="3dp"
            android:paddingStart="3dp"
            android:paddingBottom="5dp"
            android:gravity="bottom"
            android:text="Date Of Travel"
            android:drawableLeft="@drawable/calendar"
            android:drawableStart="@drawable/calendar"
            android:background="@drawable/textview"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawablePadding="15dp"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="bottom"
            android:textSize="18sp"
            android:paddingRight="13dp"
            android:paddingEnd="13dp"
            android:paddingLeft="3dp"
            android:paddingStart="3dp"
            android:text="Time"
            android:paddingBottom="5dp"
            android:drawableLeft="@drawable/time"
            android:drawableStart="@drawable/time"
            android:background="@drawable/textview"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawablePadding="15dp"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="bottom"
            android:textSize="18sp"
            android:paddingRight="13dp"
            android:paddingEnd="13dp"
            android:paddingLeft="3dp"
            android:paddingStart="3dp"
            android:text="Car Type"
            android:paddingBottom="5dp"
            android:drawableLeft="@drawable/car"
            android:drawableStart="@drawable/car"
            android:background="@drawable/textview"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:weightSum="1">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="One way"
                    android:textColor="@color/action_bar_green"
                    android:layout_weight="0.5"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:textSize="18sp"
                    android:id="@+id/OneWay" />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/action_bar_green"
                    android:layout_weight="0.5"
                    android:paddingStart="10dp"
                    android:text="Two way"
                    android:textSize="18sp"
                    android:checked="true"
                    android:id="@+id/TwoWay"/>

            </LinearLayout>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/action_bar_green"
                android:text="Multiple Destinations"
                android:id="@+id/MultiDestin"/>
        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Return Details"
            android:visibility="visible"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/bac"
            android:padding="5dp"
            android:id="@+id/return_details"
            android:background="@drawable/textview"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:drawablePadding="15dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:paddingRight="13dp"
            android:paddingEnd="13dp"
            android:paddingLeft="3dp"
            android:paddingStart="3dp"
            android:paddingBottom="5dp"
            android:gravity="bottom"
            android:text="Date Of Travel"
            android:id="@+id/date_travel_return"
            android:drawableLeft="@drawable/calendar"
            android:drawableStart="@drawable/calendar"
            android:background="@drawable/textview"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawablePadding="15dp"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="bottom"
            android:textSize="18sp"
            android:paddingRight="13dp"
            android:paddingEnd="13dp"
            android:paddingLeft="3dp"
            android:paddingStart="3dp"
            android:text="Time"
            android:id="@+id/time_travel_return"
            android:paddingBottom="5dp"
            android:drawableLeft="@drawable/time"
            android:drawableStart="@drawable/time"
            android:background="@drawable/textview"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="7dp"
            android:textColor="@color/action_bar_green"
            android:text="I want to share my cab"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bac"
            android:text="Book Now"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/bRegisterNow"
            android:textAllCaps="false"/>



    </LinearLayout>

</LinearLayout>
</ScrollView>