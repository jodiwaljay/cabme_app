<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/booking_page"
    tools:context=".MainActivity"
    android:background="@drawable/side_nav_bar"
    android:focusable="true"
    android:weightSum="1"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:weightSum="1"
        android:background="@drawable/booking_photo"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/from_and_to"
            android:weightSum="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/from"/>
                <TextView
                    android:id="@+id/input_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:gravity="start"
                    android:textColor="#000000"
                    android:padding="7dp"
                    android:text="From"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/input_fom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:gravity="end"
                    android:padding="7dp"
                    android:textColor="#000000"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Pilani"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/from_and_to"
            android:weightSum="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/destination"/>
                <TextView
                    android:id="@+id/input_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:gravity="start"
                    android:textColor="#000000"
                    android:padding="7dp"
                    android:text="To"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/input_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:gravity="end"
                    android:padding="7dp"
                    android:textColor="#000000"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Jaipur"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.6"
        android:background="@drawable/black_gradient"
        android:layout_height="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Journey"
                android:textColor="#000000"
                android:padding="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:clickable="true"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:hint="dd-mm-yyyy"
                android:focusable="false"
                android:padding="4dp"
                android:textColor="#000000"
                android:paddingStart="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:paddingLeft="7dp"
                android:background="@drawable/border_date"
                android:drawableRight="@drawable/calender"
                android:drawableEnd="@drawable/calender"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cab Type"
                android:textColor="#000000"
                android:padding="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:clickable="true"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </LinearLayout>


    <CheckBox
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox_selector"
        android:text="I want xtra Luggage Carrier"
        android:padding="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox_selector"
        android:text="I accept the Terms and Conditions"
        android:padding="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="@drawable/signin_border"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
    </LinearLayout>



</LinearLayout>